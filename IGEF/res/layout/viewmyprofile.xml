<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <ImageView android:id="@+id/updateprofile"
            android:layout_width="150dp"
            android:layout_height="50dp" 
            android:src="@drawable/updateprofile"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.SocialNetwork.CustomFonts.MyProfileBoldFOnt
                    android:id="@+id/myname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/IGEF_RED"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/myprofilepicture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:src="@drawable/noimage" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.SocialNetwork.CustomFonts.MyProfileBoldFOnt
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="College Roll No : "
                    android:textColor="@color/IGEF_RED"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                

                <com.SocialNetwork.CustomFonts.MyProfileFont
                    android:id="@+id/myrollno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/IGEF_RED"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.SocialNetwork.CustomFonts.MyProfileBoldFOnt
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Year : "
                    android:textColor="@color/IGEF_RED"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.SocialNetwork.CustomFonts.MyProfileFont
                    android:id="@+id/myYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/IGEF_RED"
                    android:textSize="15sp" />
            </TableRow>
            
            
              <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.SocialNetwork.CustomFonts.MyProfileBoldFOnt
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Department : "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/IGEF_RED" />

                <com.SocialNetwork.CustomFonts.MyProfileFont
                    android:id="@+id/myDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp" 
                    android:textColor="@color/IGEF_RED" />
            </TableRow>
            
               <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.SocialNetwork.CustomFonts.MyProfileBoldFOnt
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Section : "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/IGEF_RED" />

                <com.SocialNetwork.CustomFonts.MyProfileFont
                    android:id="@+id/myScetion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp" 
                    android:textColor="@color/IGEF_RED" 
                    android:textAllCaps="true"/>
            </TableRow>
            
                <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.SocialNetwork.CustomFonts.MyProfileBoldFOnt
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Email ID : "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/IGEF_RED" />

                <com.SocialNetwork.CustomFonts.MyProfileFont
                    android:id="@+id/myEmailID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp" 
                    android:textColor="@color/IGEF_RED" />
            </TableRow>
            
                
              
              
        </TableLayout>
    </LinearLayout>

</ScrollView>